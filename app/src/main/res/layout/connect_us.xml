            android:layout_height="0.5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="0.5dp"
            android:id="@+id/telegram"
            style="@style/wallet_tool"
            android:drawableLeft="@mipmap/icon_telegram"
