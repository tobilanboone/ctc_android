<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/contain"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15.9dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_white">
        <ImageView
            android:id="@+id/record_item_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/icon_zc"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="14.9dp"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/record_address"
                android:layout_weight="1"
                android:ellipsize = "middle"
                android:singleLine="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="#333333"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/record_time"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:gravity="center_vertical"
                android:ellipsize="middle"
                android:maxEms="16"
                android:singleLine="true"
                android:text="1000"
                android:textColor="#BDBDBD"
                android:textSize="15sp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/record_money"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h40"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/h10"
            android:gravity="center"
            android:text="1000"
            android:textColor="#333333"
            android:textSize="15sp" />

       <!-- <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_half"
            android:layout_below="@+id/record_money"
            android:layout_margin="@dimen/h6"
            android:background="@color/divide_color" />-->



        <!--<TextView
            android:id="@+id/record_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divider"
            android:layout_marginRight="@dimen/h10"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="1000"
            android:textColor="@color/appColor"
            android:textSize="@dimen/p18" />-->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/ctc_backgrount"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"/>

</RelativeLayout>