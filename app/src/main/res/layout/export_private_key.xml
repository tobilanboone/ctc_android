<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#aa000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:id="@+id/export_linear"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/qrcode_dialog"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:text="@string/export_private_key"
            android:layout_gravity="center"
            android:textColor="#303030"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:id="@+id/safe_tip"
            android:textColor="#FF4949"
            android:text="@string/export_privte_key_tip"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="5.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/private_key"
            android:background="#F0F0F0"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:singleLine="false"
            android:textSize="15sp"
            android:textColor="#B2B2B2"
            android:text="cece21341rrttwsfvax212dacece21341rrttwsfvax212da"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="@color/ctc_backgrount"
            android:layout_marginTop="17dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/button_linear"
            android:layout_height="44dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="17sp"
                android:id="@+id/cancel"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="#505050"
                android:layout_height="44dp" />
            <View
                android:layout_width="1dp"
                android:background="@color/ctc_backgrount"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="17sp"
                android:id="@+id/sure"
                android:gravity="center"
                android:text="@string/copy"
                android:textColor="#2F64C4 "
                android:layout_height="44dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
